@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<section id="content">

    <div class="container">

        <div class="row">

            <div class="col-xs-12 text-center padding25">
                <h4>Login</h4>
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="col-xs-12 padding25">
                <form asp-action="Login" method="post">
                    <input type="hidden" name="url" value="@ViewBag.url" />
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <input asp-for="Email" class="form-control input-lg" placeholder="Email">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Password" class="form-control input-lg" placeholder="Password">
                        </div>

                        <div class="form-group col-xs-12 text-right">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>

</section>

