@model OrderDetails

@{
    ViewData["Title"] = "Checkout";
}

<section id="content">

    <div class="container">

        <div class="row">

            <div class="col-xs-12 text-center padding25">
                <p class="h1">Lütfen bigileriniz girin</p>
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="col-xs-12 padding25">
                <form method="post">
                    <div class="row">

                        <div class="form-group col-xs-12">
                            <input asp-for="AdresTanimi" class="form-control input-lg" placeholder="Adres Tanımı">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Adres" class="form-control input-lg" placeholder="Adres">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Sehir" class="form-control input-lg" placeholder="Şehir">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Semt" class="form-control input-lg" placeholder="Semt">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Telefon" class="form-control input-lg" placeholder="Telefon">
                        </div>

                        <div class="form-group col-xs-12 text-right">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-shopping-basket" aria-hidden="true"></i> Siparişi Tamamla
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>

</section>